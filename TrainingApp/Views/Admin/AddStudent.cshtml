@model TrainingApp.ViewModels.AddTrainerViewModel

@{
    ViewBag.Title = "Add Student";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ensure you have a shared layout, or you can remove this line if not applicable
}

<h2>Add Student</h2>

@using ((Html.BeginForm()))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Student</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.TrainerName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TrainerName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter student name" } })
                @Html.ValidationMessageFor(model => model.TrainerName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TrainerEmail, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TrainerEmail, new { htmlAttributes = new { @class = "form-control", type = "email", placeholder = "Enter student email" } })
                @Html.ValidationMessageFor(model => model.TrainerEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TrainerPassword, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.TrainerPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter password" } })
                @Html.ValidationMessageFor(model => model.TrainerPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UniversitySupervisorID, "Supervisor", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @if (Model.UniversitySupervisors != null && Model.UniversitySupervisors.Any())
                {
                    @Html.DropDownListFor(model => model.UniversitySupervisorID, new SelectList(Model.UniversitySupervisors, "Id", "Name"), "Select Supervisor", new { @class = "form-control" })
                }
                else
                {
                    <p>No supervisors available</p>
                }
                @Html.ValidationMessageFor(model => model.UniversitySupervisorID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Student" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "AdminDashboard", "Admin")
</div>
