@model TrainingApp.ViewModels.AdminDashboardViewModel

@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ensure you have a shared layout, or you can remove this line if not applicable
}

<h2>Admin Dashboard</h2>

<div>
    <h3>Students</h3>
    <p>
        @Html.ActionLink("Add Student", "AddStudent", "Admin")
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Student ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Supervisor</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.Students)
            {
                if (student.UniversitySupervisorID != null)
                {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Email</td>
                    
                    <td>@(Model.GetSupervisorName(student.UniversitySupervisorID))</td>
                </tr>
                }
            }
        </tbody>
    </table>
</div>

<div>
    <h3>Supervisors</h3>
    <p>
        @Html.ActionLink("Add Supervisor", "AddSupervisor", "Admin")
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Supervisor ID</th>
                <th>Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var supervisor in Model.Supervisors)
            {
                if (supervisor.UniversitySupervisorID == null)
                {
                <tr>
                    <td>@supervisor.Id</td>
                    <td>@supervisor.Name</td>
                    <td>@supervisor.Email</td>
                
                </tr>
                }
            }
        </tbody>
    </table>
</div>
