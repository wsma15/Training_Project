@using TrainingApp.Models
@model LoginViewModel

@{
    ViewBag.Title = "Log in";
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">
    <link href="~/style/style.css" rel="stylesheet" />
</head>
<body>
    <div class="main">
        <input type="checkbox" id="chk" aria-hidden="true">

        <div class="signup">
            @using (Html.BeginForm("RegisterNewUser", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <label for="chk" aria-hidden="true">Sign up</label>

                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", style = "width: 60%; height: 20px; background: #e0dede; justify-content: center; display: flex; margin: 20px auto; padding: 10px; border: none; outline: none; border-radius: 5px;", placeholder = "Full Name" })

                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", style = "width: 60%; height: 20px; background: #e0dede; justify-content: center; display: flex; margin: 20px auto; padding: 10px; border: none; outline: none; border-radius: 5px;", placeholder = "Email Address" })

                @Html.PasswordFor(m => m.Password, new { @class = "form-control", style = "width: 60%; height: 20px; background: #e0dede; justify-content: center; display: flex; margin: 20px auto; padding: 10px; border: none; outline: none; border-radius: 5px;", placeholder = "Password" })

                <button>Sign up</button>
            }
        </div>

        <div class="login">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
                <label for="chk" aria-hidden="true">Login</label>
                @Html.AntiForgeryToken()
                @Html.TextBoxFor(m => m.UserId, new { @class = "form-control", style = "width: 60%; height: 20px; background: #e0dede; justify-content: center; display: flex; margin: 20px auto; padding: 10px; border: none; outline: none; border-radius: 5px;", placeholder = "ID" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", style = "width: 60%; height: 20px; background: #e0dede; justify-content: center; display: flex; margin: 20px auto; padding: 10px; border: none; outline: none; border-radius: 5px;", placeholder = "Password" })
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <button type="submit" value="Log in">Log in</button>
            }
        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
