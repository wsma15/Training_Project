@{
    ViewBag.Title = "Contact";
    ViewBag.Message = "Get in touch with us.";
}
<main aria-labelledby="title" class="container mt-5">
    <h2 id="title" class="display-4 text-center mb-4">@ViewBag.Title</h2>
    <p class="text-center mb-5">@ViewBag.Message</p>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="contact-info bg-light p-4 rounded shadow-sm">
                <h4 class="mb-3">Personal Contact</h4>
                <address>
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-person-circle text-primary me-2"></i>
                        <strong>Full Name:</strong> Hussein Alwisi
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-geo-alt text-primary me-2"></i>
                        <strong>Address:</strong> Jordan, Irbid
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-envelope text-primary me-2"></i>
                        <strong>Email:</strong> <a href="mailto:hussein.alwisi@outlook.com">hussein.alwisi@outlook.com</a>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-telephone text-primary me-2"></i>
                        <strong>Phone:</strong> <a href="tel:+962790119021">+962 790 119 021</a>
                    </div>
                </address>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="bg-light p-4 rounded shadow-sm">
                <h4>Get in Touch</h4>
                <p>If you have any questions or need further assistance, feel free to reach out to us via the provided contact details.</p>
            </div>
        </div>
    </div>
</main>

<!-- Add some custom CSS and Bootstrap Icons for enhanced UI -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" />

<style>
    .container {
        max-width: 900px;
    }

    .display-4 {
        font-size: 2.5rem;
        font-weight: 300;
    }

    .text-center {
        text-align: center;
    }

    .mb-4 {
        margin-bottom: 1.5rem;
    }

    .mb-5 {
        margin-bottom: 3rem;
    }

    .contact-info {
        background-color: #f8f9fa;
    }

    .bg-light {
        background-color: #f8f9fa;
    }

    .rounded {
        border-radius: .25rem;
    }

    .shadow-sm {
        box-shadow: 0 .125rem .25rem rgba(0,0,0,.075);
    }

    address {
        line-height: 1.6;
    }

    .bi {
        font-size: 1.2rem;
    }
</style>
